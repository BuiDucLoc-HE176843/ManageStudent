<style>
    .table-container {
    padding: 25px;
    background: #fdfaf4; /* Tông kem nhạt */
    border-radius: 15px;
    border: 2px solid #d4af37; /* Viền vàng nhạt */
    box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
    font-family: 'Georgia', serif;
}

h3 {
    text-align: center;
    color: #2c3e50; /* Xanh navy cổ điển */
    font-size: 24px;
    margin-bottom: 20px;
    font-weight: bold;
}

table {
    width: 100%;
    border-collapse: collapse;
    background: #fff8e7; /* Tông nền vàng nhạt */
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #d4af37;
}

th {
    background: #2c3e50; /* Xanh navy */
    color: #f8f9fa;
    font-weight: bold;
    padding: 14px;
    text-transform: uppercase;
    border-bottom: 2px solid #d4af37;
}

td {
    padding: 14px;
    border-bottom: 1px solid #ddd;
    color: #333;
    font-size: 16px;
}

tr:nth-child(even) {
    background: #f9f3e9; /* Vàng nhạt cổ điển */
}

tr:hover {
    background: #e6d5b8;
    transition: 0.3s;
}

.btn {
    padding: 8px 12px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    font-size: 14px;
}

.btn-success {
    background-color: #28a745;
    color: white;
}

.btn-warning {
    background-color: #ffc107;
    color: black;
}

.btn-danger {
    background-color: #dc3545;
    color: white;
}

/* Cập nhật cho form tìm kiếm */
input[type="text"] {
    border: 1px solid #d4af37;
    border-radius: 6px;
    padding: 8px;
    width: 250px;
}

.btn-primary {
    background: #2c3e50;
    border: none;
    color: white;
}

</style>


<div class="table-container">
    <h3>Quản lý học sinh</h3>
    <a href="/Admin/AddStudent" class="btn btn-success mb-3">Thêm Học Sinh</a>
    <form method="get" asp-action="SearchStudent" asp-controller="Admin" class="d-flex">
    <input type="text" id="searchInput" name="Search" class="form-control mb-3" placeholder="Tìm kiếm học sinh..." value="@Context.Request.Query["Search"]">
    <button type="submit" class="btn btn-primary mx-2">Tìm Kiếm</button>
    <a href="@Url.Action("ManageStudent", "Admin")" class="btn btn-secondary">Refresh</a>
</form>



    <table class="table">
        <thead>
            <tr>
                <th>Tên</th>
                <th>Ngày sinh</th>
                <th>Mã SV</th>
                <th>Email</th>
                <th>SĐT</th>
                <th>Địa chỉ</th>
                <th>Class</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody id="studentTable">
            @foreach (var student in @ViewBag.listStudent)
            {
                    <tr id="row-@student.Code">
                        <td>@student.Code</td>
                         <td>@student.Name</td>
                         <td>@(student.Dob?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                        <td>@student.Email</td>
                        <td>@student.Phone</td>
                        <td>@student.Address</td>
                            <td>
                        @if (student.Classes.Count > 0)
                        {
                            foreach (var cls in student.Classes)
                            {
                                        <span>@cls.Code</span>
                            }
                        }
                        else
                        {
                                <span class="text-muted">Chưa có lớp</span>
                        }
                    </td>
                        <td>
                            
                            <a href="/Admin/EditStudent/@student.Id" class="btn btn-warning btn-sm">Sửa</a>

                           
                                        <button class="btn btn-danger btn-sm" onclick="confirmDelete('@student.Id')">Xóa</button>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

</div>

<script>
    function confirmDelete(accountId) {
        console.log("Deleting account: " + accountId);  // Debugging

        if (confirm("Are you sure you want to delete this account?")) {
            window.location.href = "@Url.Action("RemoveStudent", "Admin")" + "?accountId=" + accountId;
        }
    }

</script>
