@{
    ViewData["Title"] = "Add Subject";
}

<style>
   body {
    font-family: "Times New Roman", serif;
    background-color: #f8f1e4;
    color: #3e2723;
    text-align: center;
    padding: 20px;
}

.container, .table-container, .form-container {
    max-width: 900px;
    margin: 0 auto;
    background: #fff;
    padding: 25px;
    border: 3px solid #c4a47c;
    border-radius: 12px;
    box-shadow: 8px 8px 20px rgba(0, 0, 0, 0.3);
    text-align: left;
}

h2, h3 {
    font-size: 26px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 15px;
    border-bottom: 3px solid #c4a47c;
    padding-bottom: 12px;
    text-align: center;
}

.alert {
    padding: 12px;
    margin: 12px 0;
    font-style: italic;
    border-radius: 8px;
    text-align: center;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border-left: 6px solid #c0392b;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border-left: 6px solid #28a745;
}

.form-group, form {
    margin-bottom: 20px;
}

label {
    font-weight: bold;
    display: block;
    margin-bottom: 6px;
    font-size: 18px;
}

select, button, input[type="text"] {
    width: 100%;
    padding: 10px;
    border: 2px solid #c4a47c;
    border-radius: 6px;
    background-color: #fff;
    font-family: "Times New Roman", serif;
    font-size: 16px;
}

select, input[type="text"] {
    background: #f4e8d1;
}

button, .btn {
    background: #c4a47c;
    color: white;
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    transition: 0.3s ease-in-out;
    text-decoration: none;
    padding: 10px 16px;
    border-radius: 6px;
    display: inline-block;
    margin-top: 10px;
    text-align: center;
}

button:hover, .btn:hover {
    background: #a27b50;
}

.btn-success { background: #28a745; }
.btn-success:hover { background: #218838; }
.btn-primary { background: #007bff; }
.btn-primary:hover { background: #0056b3; }
.btn-secondary { background: #6c757d; }
.btn-secondary:hover { background: #5a6268; }
.btn-warning { background: #ffc107; color: black; }
.btn-warning:hover { background: #e0a800; }
.btn-danger { background: #dc3545; }
.btn-danger:hover { background: #c82333; }

.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background: #faf3e6;
    border-radius: 8px;
    overflow: hidden;
}

.table th, .table td {
    border: 1px solid #c4a47c;
    padding: 12px;
    text-align: left;
    font-size: 16px;
}

.table th {
    background: #6c8cd5;
    color: white;
    text-transform: uppercase;
    font-size: 18px;
}

.table tr:nth-child(even) {
    background-color: #f4e8d1;
}

.table tr:hover {
    background-color: #e0c7a2;
}

/* Styling for form container */
.form-container {
    max-width: 600px;
    margin: 50px auto;
    padding: 20px;
    background: #fff8f0;
    border: 3px solid #c4a47c;
    border-radius: 12px;
    box-shadow: 8px 8px 20px rgba(0, 0, 0, 0.3);
    text-align: center;
}

.form-container label {
    text-align: left;
    font-size: 18px;
    font-weight: bold;
    color: #5a3e2b;
}

.form-container input, .form-container select {
    border: 2px solid #c4a47c;
    background: #f8f1e4;
    padding: 10px;
    border-radius: 6px;
    font-size: 16px;
}

.form-container button, .form-container .btn {
    margin-top: 15px;
}

</style>

<div class="form-container">
    <h3>Add New Subject</h3>

    <form method="post" asp-action="AddSubject" asp-controller="Admin">
        <label for="Name">Subject Name</label>
        <input type="text" id="Name" name="Name" required placeholder="Enter subject name">

        <label for="Code">Subject Code</label>
        <input type="text" id="Code" name="Code" required placeholder="Enter subject code">

        <label for="Category">Category</label>
        <select id="Category" name="Category" required>
            <option value="">-- Select Category --</option>
            @foreach (var category in ViewBag.Categories)
            {
                    <option value="@category.Id">@category.Name</option>
            }
        </select>

        <button type="submit" class="btn btn-success">Save</button>
        <a href="@Url.Action("ManageSubjects", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
