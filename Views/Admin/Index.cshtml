
@{
    ViewBag.Title = "Admin Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f1e5;
            font-family: "Times New Roman", serif;
        }
        .container {
            max-width: 800px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
        }
        h2 {
            color: #5a3e1b;
            font-weight: bold;
            text-transform: uppercase;
        }
        .button-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 20px;
        }
        .btn {
            background-color: #8b5e34;
            color: white;
            font-size: 18px;
            padding: 12px;
            border-radius: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        .btn:hover {
            background-color: #a47148;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Admin Management</h2>
        <div class="button-container">
            <a href="/Admin/ManageStudent" class="btn">Manage Students</a>
            <a href="/Admin/ManageSubjects" class="btn">Manage Subjects</a>
            <a href="/Admin/ManageClass" class="btn">Manage Class</a>
            <a href="/Admin/ManageTeacher" class="btn">Manage Teachers</a>
        </div>
    </div>
</body>
</html>
