<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Class List</title>
    <style>
        body {
            font-family: "Times New Roman", serif;
            background-color: #f5f5dc;
            color: #333;
            margin: 20px;
        }
        .container {
            width: 80%;
            margin: 0 auto;
            background: #fff;
            padding: 20px;
            border: 2px solid #8b4513;
            box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);
        }
        h2 {
            text-align: center;
            color: #8b4513;
        }
        form {
            text-align: center;
            margin-bottom: 20px;
        }
        input[type="text"] {
            width: 60%;
            padding: 8px;
            border: 1px solid #8b4513;
        }
        footer {
    position: relative;
    bottom: 0;
    width: 100%;
    text-align: center;
    padding: 10px;
    background: #fff;
    border-top: 2px solid #8b4513;
}

        button, a {
            padding: 8px 12px;
            margin: 5px;
            text-decoration: none;
            border: 1px solid #8b4513;
            background-color: #deb887;
            color: white;
            cursor: pointer;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #8b4513;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #8b4513;
            color: white;
        }
        .alert {
            padding: 10px;
            margin-bottom: 15px;
            text-align: center;
        }
        .alert-danger { background-color: #ffcccc; color: #900; }
        .alert-success { background-color: #ccffcc; color: #090; }
    </style>
</head>
<body>
    <div class="container">
        <h2>Student Class List</h2>
        <form method="get" asp-action="SearchClass" asp-controller="Admin">
            <input type="text" id="searchInput" name="Search" placeholder="Tìm kiếm học sinh..." value="@Context.Request.Query["Search"]">
            <button type="submit">Tìm Kiếm</button>
            <a href="@Url.Action("ManageClass", "Admin")">Refresh</a>
        </form>

        @if (TempData["ErrorMessage"] != null)
        {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <table>
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Student Name</th>
                    <th>Class ID</th>
                    <th>Class Name</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.StudentClasses != null)
                {
                    @foreach (var item in ViewBag.StudentClasses)
                    {
                                        <tr>
                                            <td>@item.StudentId</td>
                                            <td>@(item.Student != null ? item.Student.Name : "No Student")</td>
                                            <td>@item.ClassId</td>
                                            <td>@(item.Class != null ? item.Class.Code : "No Class")</td>
                                        </tr>
                    }
                }
                else
                {
                            <tr>
                                <td colspan="4" style="text-align:center;">No data available</td>
                            </tr>
                }
            </tbody>
        </table>
        <br>
        <a href="@Url.Action("AddStudentInClass", "Admin")">Add</a>
    </div>
</body>
</html>
