@{
    ViewData["Title"] = "Add Teacher";
}

<style>
    .form-container {
    max-width: 500px;
    margin: 50px auto;
    padding: 25px;
    background: #fdf9f3;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    border: 2px solid #d4af37; /* Màu vàng ánh kim */
}

h2 {
    font-family: 'Playfair Display', serif;
    font-size: 28px;
    font-weight: bold;
    text-align: center;
    color: #8b6f47;
    text-transform: uppercase;
}

.form-label {
    font-weight: bold;
    font-size: 16px;
    color: #5c4a3e;
}

.form-control {
    border: 1px solid #b5a089;
    border-radius: 8px;
    padding: 10px;
    font-size: 14px;
    background-color: #fcfbf7;
}

.btn-primary {
    background: #8b6f47;
    border: none;
    padding: 12px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 8px;
    transition: all 0.3s;
}

.btn-primary:hover {
    background: #a3875e;
}

.btn-secondary {
    background: #b5a089;
    border: none;
    padding: 12px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 8px;
    transition: all 0.3s;
}

.btn-secondary:hover {
    background: #d4af37;
}

</style>

<div class="container">
    <div class="form-container">
        <h2 class="text-center">Add Teacher</h2>
        <form asp-action="AddTeacher" method="post">
            @Html.AntiForgeryToken() 

            <div class="mb-3">
                <label class="form-label">Teacher Name</label>
                <input name="Name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Code</label>
                <input name="Code" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="Email" type="email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Phone</label>
                <input name="Phone" class="form-control" required pattern="\d{10}" placeholder="Enter 10-digit phone number">
            </div>

            <div class="mb-3">
                <label class="form-label">Date of Birth</label>
                <input name="Dob" class="form-control" type="date" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Address</label>
                <input name="Address" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary w-100">Add Teacher</button>
            <a asp-action="ManageTeacher" class="btn btn-secondary w-100 mt-2">Cancel</a>
        </form>
    </div>
</div>
