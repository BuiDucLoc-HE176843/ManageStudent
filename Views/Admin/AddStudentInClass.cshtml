@{
    ViewData["Title"] = "Manage Students in Classes";
}

<div class="container">
    <h2>Manage Students in Classes</h2>

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-error">@TempData["ErrorMessage"]</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form method="post" action="@Url.Action("AddStudentInClass", "Admin")">
        <div class="form-group">
            <label for="studentId">Select Student:</label>
            <select name="studentId" id="studentId" required>
                <option value="">-- Select Student --</option>
                @foreach (var student in ViewBag.Students)
                {
                        <option value="@student.Id">@student.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="classId">Select Class:</label>
            <select name="classId" id="classId" required>
                <option value="">-- Select Class --</option>
                @foreach (var cls in ViewBag.Classes)
                {
                        <option value="@cls.Id">@cls.Code</option>
                }
            </select>
        </div>

        <button type="submit" class="btn">Add Student to Class</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.sExisted))
    {
            <div class="alert alert-warning">@ViewBag.sExisted</div>
    }
</div>

<link rel="stylesheet" href="~/css/neoclassical.css" />
