<style>
   .table-container {
    max-width: 600px;
    margin: 50px auto;
    padding: 25px;
    background: #fdf9f3; /* Màu nền trắng kem */
    border-radius: 12px;
    box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
    border: 2px solid #d4af37; /* Viền vàng ánh kim */
    text-align: center;
}

h3 {
    font-family: 'Playfair Display', serif;
    font-size: 26px;
    font-weight: bold;
    color: #8b6f47; /* Màu nâu cổ điển */
    text-transform: uppercase;
    margin-bottom: 20px;
}

.form-label {
    font-weight: bold;
    font-size: 16px;
    color: #5c4a3e; /* Màu nâu trầm */
}

.form-control {
    width: 100%;
    padding: 10px;
    margin-bottom: 12px;
    border: 1px solid #b5a089;
    border-radius: 8px;
    font-size: 14px;
    background-color: #fcfbf7;
    transition: all 0.3s;
}

.form-control:focus {
    border-color: #d4af37; /* Viền vàng khi focus */
    box-shadow: 0 0 8px rgba(212, 175, 55, 0.5);
}

.btn {
    padding: 12px 18px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    display: inline-block;
    margin-top: 10px;
    transition: all 0.3s;
    font-size: 16px;
}

.btn-success {
    background: linear-gradient(45deg, #8b6f47, #a3875e);
    color: white;
    border: none;
}

.btn-success:hover {
    background: #bda78a;
}

.btn-secondary {
    background: linear-gradient(45deg, #b5a089, #d4af37);
    color: white;
    border: none;
}

.btn-secondary:hover {
    background: #e0c278;
}

.alert {
    margin-top: 15px;
    padding: 10px;
    border-radius: 5px;
    text-align: center;
    font-weight: bold;
}

.alert-danger {
    background-color: #e74c3c;
    color: white;
}

.alert-success {
    background-color: #2ecc71;
    color: white;
}

</style>

<div class="table-container">
    <h3>Chỉnh sửa Thông tin Giáo Viên</h3>

    <form method="post" asp-action="EditTeacher" asp-controller="Admin">
        <input type="hidden" name="Id" value="@ViewBag.teacher.Id" />

        <div class="mb-3">
            <label for="code" class="form-label">Mã Giáo Viên</label>
            <input type="text" id="code" name="Code" class="form-control" value="@ViewBag.teacher.Code" required>
        </div>

        <div class="mb-3">
            <label for="name" class="form-label">Tên</label>
            <input type="text" id="name" name="Name" class="form-control" value="@ViewBag.teacher.Name" required>
        </div>

        <div class="mb-3">
            <label for="dob" class="form-label">Ngày Sinh</label>
            <input type="date" id="dob" name="Dob" class="form-control" value="@(ViewBag.teacher.Dob?.ToString("yyyy-MM-dd"))">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="Email" class="form-control" value="@ViewBag.teacher.Email" required>
        </div>

        <div class="mb-3">
            <label for="phone" class="form-label">SĐT</label>
            <input type="text" id="phone" name="Phone" class="form-control" value="@ViewBag.teacher.Phone" required>
        </div>

        <div class="mb-3">
            <label for="address" class="form-label">Địa Chỉ</label>
            <input type="text" id="address" name="Address" class="form-control" value="@ViewBag.teacher.Address" required>
        </div>

        <button type="submit" class="btn btn-success">Lưu Thay Đổi</button>
        <a href="@Url.Action("ManageTeacher", "Admin")" class="btn btn-secondary">Hủy</a>
    </form>

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
</div>
