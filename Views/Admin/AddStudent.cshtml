@model ManageCoure.Models.Account

@{
    ViewData["Title"] = "Add Student";
}

<style>
    body {
        font-family: 'Playfair Display', serif;
        background-color: #f5f1e8;
        color: #2c2c2c;
    }
    .container {
        max-width: 600px;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    h2 {
        text-align: center;
        font-weight: bold;
        color: #5a4a42;
        border-bottom: 3px solid #c2a67c;
        display: inline-block;
        padding-bottom: 5px;
    }
    .form-label {
        font-weight: bold;
    }
    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #bba58d;
    }
    .btn-primary {
        background-color: #8c7153;
        border-color: #8c7153;
        font-weight: bold;
    }
    .btn-primary:hover {
        background-color: #755b3e;
    }
    .btn-secondary {
        background-color: #ddd3c3;
        border: none;
        color: #5a4a42;
    }
    .btn-secondary:hover {
        background-color: #c2a67c;
    }
</style>

<div class="container mt-4">
    <h2>Add New Student</h2>
    <form asp-action="AddStudent" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Student Name</label>
            <input asp-for="Name" name="Name" class="form-control" required>
        </div>

        <div class="mb-3">
            <label asp-for="Dob" class="form-label">Date of Birth</label>
            <input asp-for="Dob" name="Dob" class="form-control" type="date" required>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Phone</label>
            <input asp-for="Phone" name="Phone" class="form-control" required>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.PhoneExit))
        {
                <div class="alert alert-danger" style="color:red;">@ViewBag.PhoneExit</div>
        }

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" name="Address" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Code" class="form-label">Student Code</label>
            <input asp-for="Code" name="Code" class="form-control" required>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.CodeExited))
        {
                <div class="alert alert-danger" style="color:red;">@ViewBag.CodeExited</div>
        }

        <div class="mb-3">
            <label class="form-label">Select Class</label>
            <select name="ClassId" class="form-select" required>
                <option value="">-- Select Class --</option>
                @foreach (var cls in ViewBag.listClass)
                {
                        <option value="@cls.Id">@cls.Code</option>
                }
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Add Student</button>
            <a asp-action="ManageStudent" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
