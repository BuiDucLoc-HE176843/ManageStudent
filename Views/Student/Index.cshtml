<style>
    /* Neoclassical Style */
body {
    font-family: "Times New Roman", serif;
    background-color: #f5f5f5;
}

.container {
    max-width: 90%;
    margin: auto;
}

.card {
    border: 2px solid #8b6f47;
    background: #fff;
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
    border-radius: 10px;
}

.card-header {
    background: linear-gradient(135deg, #8b6f47, #5a4228);
    color: #fff;
    font-size: 24px;
    font-weight: bold;
    border-bottom: 3px solid #5a4228;
    text-transform: uppercase;
}

.card-body {
    padding: 20px;
}

.form-control {
    border: 2px solid #8b6f47;
    font-size: 16px;
}

.btn-primary {
    background: #8b6f47;
    border: none;
    font-weight: bold;
    transition: 0.3s;
}

.btn-primary:hover {
    background: #5a4228;
    color: #fff;
}

/* Table Styling */
.table {
    border-collapse: collapse;
    width: 100%;
    background: #fff;
    border: 2px solid #8b6f47;
}

.table th {
    background: #5a4228;
    color: white;
    padding: 12px;
    font-size: 16px;
    border: 1px solid #8b6f47;
    text-transform: uppercase;
}

.table td {
    padding: 10px;
    border: 1px solid #8b6f47;
    font-size: 16px;
}

.table-hover tbody tr:hover {
    background-color: #f0e6d6;
}

.btn-warning {
    background: #c9a66b;
    border: none;
    color: white;
    font-weight: bold;
}

.btn-warning:hover {
    background: #8b6f47;
    color: #fff;
}

.text-danger {
    font-size: 18px;
    font-style: italic;
    font-weight: bold;
}

}


</style>
<div class="container mt-4">
    <div class="card ">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">My Class</h3>

        </div>
        <div class="card-body">
            <form method="get">
                <div class="d-flex justify-content-between mb-3">
                    <div class="d-flex ">
                        <input type="text" id="searchInput" name="search" class="form-control" placeholder="Search class...">
                        <button class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Class Code</th>
                            <th>Class Name</th>
                            <th>Subject</th>
                            <th>Semester</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.MyClass != null && ViewBag.MyClass.Count > 0)
                        {
                            int index = 1;
                            @foreach (var item in ViewBag.MyClass)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td class="fw-bold">@item.Class.Code</td>
                                    <td>@item.Class.Name</td>
                                    <td>@item.Class.SubjectNavigation?.Name ( @item.Class.SubjectNavigation?.Code)</td>
                                    <td>@item.Class.Semester?.Name</td>
                                    <td>
                                        <a asp-controller="Class" asp-action="Detail" asp-route-id="@item.Class.Id" class="btn btn-warning btn-sm">
                                            Detail
                                        </a>
                                        <a asp-action="MyGrade" asp-route-classId="@item.Class.Id" class="btn btn-warning btn-sm">
                                            My Grade
                                        </a>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-danger fw-bold">No classes found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>