<style>
body {
    background-color: #f5f0e1;
    font-family: 'Times New Roman', serif;
}

.container {
    max-width: 90%;
    margin: auto;
}

.card {
    border: 2px solid #b89b72;
    background: linear-gradient(to bottom, #fffaf0, #f5f0e1);
    border-radius: 12px;
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
}

.card-header {
    background: #b89b72 !important;
    color: white !important;
    font-weight: bold;
    font-size: 22px;
}

.badge {
    font-size: 14px;
    padding: 6px 12px;
    border-radius: 8px;
    font-weight: bold;
}

.table {
    border-collapse: collapse;
    width: 100%;
}

.table th, .table td {
    border: 1px solid #d1d1d1; /* Viền giống Excel */
    padding: 8px;
    text-align: center;
}

.table th {
    background-color: #f4f4f4; /* Màu nền tiêu đề cột */
    font-weight: bold;
}

.table input[type="number"] {
    width: 100%;
    border: none;
    text-align: center;
    background: transparent;
    outline: none;
    font-size: 16px;
    padding: 4px;
}

/* Ô nhập có hiệu ứng khi focus */
.table input[type="number"]:focus {
    background-color: #ffffcc; /* Màu vàng nhạt giống Excel khi chọn */
    border: 1px solid #007bff; /* Viền xanh dương */
    outline: none;
}

/* Hiệu ứng hover */
.table tr:hover {
    background-color: #f1f1f1; /* Màu nền nhẹ khi hover */
}

/* Hàng số thứ tự và tổng điểm không cho chỉnh sửa */
.table td:nth-child(1), .table td:nth-last-child(2) {
    background-color: #e9ecef; /* Màu xám nhạt */
    font-weight: bold;
}

/* Hiệu ứng scroll ngang nếu bảng quá rộng */
.table-responsive {
    overflow-x: auto;
}


.btn-primary {
    background-color: #8c7853;
    border-color: #8c7853;
    font-size: 18px;
    padding: 10px 20px;
    border-radius: 8px;
}

.btn-secondary {
    background-color: #b89b72;
    border-color: #b89b72;
    font-size: 18px;
    padding: 10px 20px;
    border-radius: 8px;
    color: white;
}

.btn-secondary:hover, .btn-primary:hover {
    filter: brightness(90%);
}

.modal-content {
    border: 2px solid #b89b72;
    background: #fffaf0;
    border-radius: 12px;
}

.modal-header {
    background-color: #b89b72;
    color: white;
    font-weight: bold;
}

.modal-footer {
    background-color: #f5f0e1;
}

.form-check-input {
    border: 2px solid #b89b72;
}

.form-check-input:checked {
    background-color: #8c7853;
    border-color: #8c7853;
}
</style>
<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">@ViewBag.MyClass.Code - @ViewBag.MyClass.Semester.Name</h3>
            <h5 class="fw-light">@ViewBag.MyClass.Name</h5>
            <span class="badge bg-light text-dark">@ViewBag.MyClass.SubjectNavigation.Name</span>
            <span class="badge bg-warning">@ViewBag.MyClass.SubjectNavigation.Code</span>
        </div>
    </div>

    <div class="table-responsive mt-4">
        <form method="post" id="frm_grade" asp-action="GradeScore" asp-controller="Class">
            <input type="hidden" name="classId" value="@ViewBag.MyClass.Id" />
            <table class="table table-hover table-bordered text-center">
                <thead class="table-primary">
                    <tr>
                        <th>No</th>
                        <th>Student</th>
                        <th>PT1</th>
                        <th>PT2</th>
                        <th>Quiz</th>
                        <th>Assignment</th>
                        <th>Final Exam</th>
                        <th>Total</th>
                        <th>Rank</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @{
                        int index = 1;
                        foreach (var item in ViewBag.Students)
                        {
                            <tr>
                                <input type="hidden" name="students[@(index-1)].Id" value="@item.StudentId" />
                                <td>@index</td>
                                <td>@item.Student.Name</td>
                                <td class="col-1">
                                    <input type="number" class="form-control" name="students[@(index-1)].Pt1" value="@item.Score?.Pt1" @(item.Score?.Pt1 != null ? "readonly" : "") />
                                </td>
                                <td class="col-1">
                                    <input type="number" class="form-control" name="students[@(index-1)].Pt2" value="@item.Score?.Pt2" @(item.Score?.Pt2 != null ? "readonly" : "") />
                                </td>
                                <td class="col-1">
                                    <input type="number" class="form-control" name="students[@(index-1)].Quiz" value="@item.Score?.Quiz" @(item.Score?.Quiz != null ? "readonly" : "") />
                                </td>
                                <td class="col-1">
                                    <input type="number" class="form-control" name="students[@(index-1)].Assignment" value="@item.Score?.Assignment" @(item.Score?.Assignment != null ? "readonly" : "") />
                                </td>
                                <td class="col-1">
                                    <input type="number" class="form-control" name="students[@(index-1)].Final" value="@item.Score?.Final" @(item.Score?.Final != null ? "readonly" : "") />
                                </td>
                                <td class="col-1">@(item.Total?.ToString("F2") ?? "Ungraded")</td>
                                <td>
                                    @if (item.Total == null)
                                    {
                                        <span class="badge bg-secondary">Ungraded</span>
                                    }
                                    else if (item.Total >= 8)
                                    {
                                        <span class="badge bg-success">Excellent</span>
                                    }
                                    else if (item.Total >= 6)
                                    {
                                        <span class="badge bg-info">Good</span>
                                    }
                                    else if (item.Total >= 4)
                                    {
                                        <span class="badge bg-warning text-dark">Average</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Bad</span>
                                    }
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-end p-3">
                <a href="@Url.Action("ExportToPdf", "Class", new { classId = ViewBag.MyClass.Id })" class="btn btn-secondary me-3">Export to PDF</a>
                <a href="@Url.Action("ExportToExcel", "Class", new { classId = ViewBag.MyClass.Id })" class="btn btn-secondary me-3">Export to Excel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll("input[type='number']").forEach(input => {
            input.addEventListener("input", function () {
                if (this.value > 10) this.value = 10;
                if (this.value < 0) this.value = 0;
            });
        });
    });

</script>