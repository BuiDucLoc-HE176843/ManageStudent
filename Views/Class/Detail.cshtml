@using System.Security.Claims
@*
*@
@{
    var userEmail = User.FindFirst(ClaimTypes.Email)?.Value;
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
    if (userRole == null)
    {
        userRole = "Guest";
    }
}
<style>
/* Neoclassical (Tân Cổ Điển) Style */

body {
    font-family: 'Playfair Display', serif;
    background-color: #f9f6f1;
    color: #2c2c2c;
}

.container {
    max-width: 1200px;
    margin: auto;
    padding: 20px;
}

/* Card Styling */
.card {
    border: 2px solid #c4a47c;
    border-radius: 15px;
    overflow: hidden;
    background: linear-gradient(135deg, #fdfcfb, #f3ede5);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.card-header {
    background: linear-gradient(to right, #8b6f47, #c4a47c);
    color: white;
    font-weight: bold;
    font-size: 1.3rem;
    text-transform: uppercase;
}

/* Table Styling */
.table {
    border-collapse: collapse;
    background: #fff;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.table thead {
    background: #8b6f47;
    color: white;
}

.table th, .table td {
    padding: 15px;
    border: 1px solid #c4a47c;
}

.table-hover tbody tr:hover {
    background: #f7ede2;
}

/* Buttons */
.btn-primary {
    background: #8b6f47;
    border: none;
    padding: 10px 20px;
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background: #a17c50;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
}

/* Badges */
.badge {
    font-size: 0.9rem;
    padding: 5px 10px;
    border-radius: 10px;
}

.badge.bg-success {
    background: #4c9f70;
}

.badge.bg-info {
    background: #5085a5;
}

.badge.bg-warning {
    background: #d4a017;
}

.badge.bg-danger {
    background: #b22222;
}

/* Modal Styling */
.modal-content {
    border-radius: 12px;
    border: 2px solid #c4a47c;
    background: linear-gradient(135deg, #fffaf0, #f3ede5);
}

.modal-header {
    background: #8b6f47;
    color: white;
    border-bottom: 2px solid #c4a47c;
}

.modal-footer {
    border-top: 2px solid #c4a47c;
}

/* Checkbox Customization */
.form-check-input {
    border: 2px solid #8b6f47;
    width: 18px;
    height: 18px;
}

.form-check-input:checked {
    background-color: #8b6f47;
    border-color: #8b6f47;
}

</style>
<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">@ViewBag.MyClass.Code - @ViewBag.MyClass.Semester.Name</h3>
            <h5 class="fw-light">@ViewBag.MyClass.Name</h5>
            <span class="badge bg-light text-dark">@ViewBag.MyClass.SubjectNavigation.Name</span>
            <span class="badge bg-warning">@ViewBag.MyClass.SubjectNavigation.Code</span>
        </div>
    </div>

    <div class="table-responsive mt-4">
        @if (userRole == "Teacher")
        {
            <div class="d-flex justify-content-end p-3">
                <a asp-action="GradeScore" asp-route-id="@ViewBag.MyClass.Id" class="btn btn-primary">Grade Score</a>
            </div>
        }
        else if (userRole == "Admin") {
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#studentModal">
                Add Student
            </button>
        }
    </div>
    <table class="table table-hover table-bordered text-center">
        <thead class="table-primary">
            <tr>
                <th>No</th>
                <th>Code</th>
                <th>Name</th>
                <th>Email</th>
                @if (userRole != "Student")
                {
                    <th>Total</th>
                    <th>Rank</th>
                }
            </tr>
        </thead>
        <tbody class="align-middle">
            @{
                int index = 1;
                @foreach (var item in ViewBag.Students)
                {
                    <tr>
                        <td>@index</td>
                        <td class="fw-bold">@item.Student.Code</td>
                        <td>@item.Student.Name</td>
                        <td>@item.Student.Email</td>
                        @if (userRole != "Student")
                        {
                            <td>@(item.Total == null ? "Ungraded" : item.Total)</td>
                            <td>
                                @if (item.Total == null)
                                {
                                    <span class="badge bg-secondary">Ungraded</span>
                                }
                                else if (item.Total >= 8)
                                {
                                    <span class="badge bg-success">Excellent</span>
                                }
                                else if (item.Total >= 6)
                                {
                                    <span class="badge bg-info">Good</span>
                                }
                                else if (item.Total >= 4)
                                {
                                    <span class="badge bg-warning text-dark">Average</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Bad</span>
                                }
                            </td>
                        }
                    </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>

<div class="modal fade" id="studentModal" tabindex="-1" aria-labelledby="studentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="studentModalLabel">Add New Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-controller="Admin" asp-action="AddStudentInClass">
                <div class="modal-body">
                        <div class="mb-3">
                            <input type="hidden" name="classId" value="@ViewBag.MyClass.Id" />
                            @foreach (var s in ViewBag.AllStudent){
                                <div>
                                <input class="form-check-input me-3" type="checkbox" name="studentId" value="@s.Id">        
                                    <span class="fw-bold text-primary">@s.Code</span> -
                                    <span>@s.Name</span>
                                </div>
                            }
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="saveStudent">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

