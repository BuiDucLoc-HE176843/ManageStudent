@{
    ViewData["Title"] = "Change Password - Neo-Classical Style";
}

<style>
    body {
        background-color: #f4ede4; /* Màu nền nhẹ nhàng */
        font-family: 'Georgia', serif; /* Font chữ cổ điển */
    }
    .change-password-container {
        max-width: 450px;
        background: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    h2 {
        font-weight: bold;
        color: #5c4b51;
        text-transform: uppercase;
    }
    .form-group label {
        font-weight: bold;
        color: #6d597a;
    }
    .form-control {
        border: 1px solid #b08968;
        border-radius: 8px;
        padding: 10px;
    }
    .btn-custom {
        background: linear-gradient(to right, #a67c52, #d4a373);
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        width: 100%;
        transition: all 0.3s ease;
    }
    .btn-custom:hover {
        background: linear-gradient(to right, #8c5a38, #b08968);
    }
    .alert {
        border-radius: 8px;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="change-password-container">
        <h2>Change Password</h2>

        @if (ViewData["SuccessMessage"] != null)
        {
                <div class="alert alert-success" role="alert">
                @ViewData["SuccessMessage"]
                </div>
        }

        <form asp-action="ChangePassword" method="post">
            <div class="form-group mt-3">
                <label>Old Password</label>
                <input type="password" name="OldPassword" class="form-control" required />
            </div>

            <div class="form-group mt-3">
                <label>New Password</label>
                <input type="password" name="NewPassword" class="form-control" required />
            </div>

            <div class="form-group mt-3">
                <label>Confirm Password</label>
                <input type="password" name="ConfirmPassword" class="form-control" required />
            </div>

            @if (ViewData["Error"] != null)
            {
                    <div class="alert alert-danger mt-3" role="alert">
                    @ViewData["Error"]
                    </div>
            }

            <button type="submit" class="btn btn-custom mt-4">Change Password</button>
        </form>
    </div>
</div>
