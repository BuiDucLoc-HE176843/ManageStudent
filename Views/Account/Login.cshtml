@{
    ViewData["Title"] = "Login - Neo-Classical Style";
}

<style>
    body {
        background-color: #f5f0e1; /* Màu nền nhẹ nhàng, cổ điển */
        font-family: 'Georgia', serif; /* Font chữ cổ điển */
    }
    .login-container {
        max-width: 450px;
        background: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    h2 {
        font-weight: bold;
        color: #5c4b51;
        text-transform: uppercase;
    }
    .form-group label {
        font-weight: bold;
        color: #6d597a;
    }
    .form-control {
        border: 1px solid #b08968;
        border-radius: 8px;
        padding: 10px;
    }
    .btn-custom {
        background: linear-gradient(to right, #a67c52, #d4a373);
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        width: 100%;
        transition: all 0.3s ease;
    }
    .btn-custom:hover {
        background: linear-gradient(to right, #8c5a38, #b08968);
    }
    .error-message {
        color: #d9534f;
        font-size: 14px;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="login-container">
        <h2>Sign In</h2>
        <form method="post">
            <div class="form-group mt-3">
                <label>Email</label>
                <input type="text" class="form-control" name="email" required />
            </div>
            <div class="form-group mt-3">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required />
            </div>
            <div class="mt-3">
                @if (ViewData["Error"] != null)
                {
                        <span class="error-message">@ViewData["Error"]</span>
                }
            </div>
            <a href="/Account/ForgotPassword" >Forgot Password</a>
            <button type="submit" class="btn btn-custom mt-4">Login</button>
        </form>
    </div>
</div>
