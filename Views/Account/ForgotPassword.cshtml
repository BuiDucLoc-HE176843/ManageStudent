<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f1e4; /* Màu nền trang nhã */
            font-family: 'Playfair Display', serif; /* Font chữ cổ điển */
        }

        .container {
            margin-top: 50px;
        }

        .forgot-password-box {
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border: 2px solid #d4af37; /* Viền vàng kim */
            text-align: center;
        }

        .forgot-password-box h3 {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            color: #5a4a42; /* Màu nâu cổ điển */
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 10px;
        }

        .btn-primary {
            background-color: #8B6F47; /* Màu nâu vàng cổ điển */
            border: none;
            padding: 12px 20px;
            font-weight: bold;
            border-radius: 8px;
            transition: 0.3s;
        }

        .btn-primary:hover {
            background-color: #6d5433;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border-radius: 8px;
            padding: 10px;
        }
    </style>
</head>

<div class="container d-flex justify-content-center">
    <div class="forgot-password-box w-50">
        <h3>Forgot Password</h3>
        <div class="col-md-8 mx-auto">
            <form asp-action="ForgotPassword" method="get">
                <div class="form-group mb-3">
                    <label class="form-label">Enter Your Email</label>
                    <input name="email" class="form-control" required />
                </div>
                @if (ViewData["Error"] != null)
                {
                        <div class="alert alert-danger" role="alert">
                        @ViewData["Error"]
                        </div>
                }
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>
