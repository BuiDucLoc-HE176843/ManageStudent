@page
@model ManageCourse.Pages.Student.ScoreModel
@{
    ViewData["Title"] = "Score";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Chi tiết điểm số</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-primary text-center mb-4">📊 Chi tiết điểm số</h2>

        @if (Model.Grades.Count > 0)
        {
            @foreach (var grade in Model.Grades)
            {
                string gradeCategory;
                string gradeClass;
                if (grade.FinalScore >= 8)
                {
                    gradeCategory = "Giỏi";
                    gradeClass = "text-success fw-bold";
                }
                else if (grade.FinalScore >= 6 && grade.FinalScore < 8)
                {
                    gradeCategory = "Khá";
                    gradeClass = "text-primary fw-bold";
                }
                else if (grade.FinalScore >= 5 && grade.FinalScore < 6)
                {
                    gradeCategory = "Trung bình";
                    gradeClass = "text-warning fw-bold";
                }
                else
                {
                    gradeCategory = "Trượt";
                    gradeClass = "text-danger fw-bold";
                }
                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-dark text-white text-center">
                        <h5><i class="fa-solid fa-book"></i> @grade.CourseName</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered text-center">
                            <tbody>
                                <tr>
                                    <th class="bg-light"><i class="fa-solid fa-star"></i> Điểm 1</th>
                                    <td>@grade.Score1</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fa-solid fa-star"></i> Điểm 2</th>
                                    <td>@grade.Score2</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fa-solid fa-star"></i> Điểm 3</th>
                                    <td>@grade.Score3</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fa-solid fa-star"></i> Điểm 4</th>
                                    <td>@grade.Score4</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fa-solid fa-star"></i> Điểm 5</th>
                                    <td>@grade.Score5</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fa-solid fa-trophy text-warning"></i> Điểm cuối</th>
                                    <td class="fw-bold text-success">@grade.FinalScore?.ToString("F2")</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fa-solid fa-medal"></i> Xếp loại</th>
                                    <td class="@gradeClass">@gradeCategory</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center text-muted">📌 Không có điểm số nào cho lớp này.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>