@page
@model ManageCourse.Pages.Student.CourcesModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Danh sách lớp học</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-primary text-center mb-4">📚 Danh sách lớp học của bạn</h2>

        @if (Model.StudentClasses.Count == 0)
        {
            <div class="alert alert-info text-center" role="alert">
                📭 Bạn không có lớp học nào.
            </div>
        }
        else{
            <table class="table table-striped table-bordered table-hover shadow-sm">
                <thead class="table-dark text-center">
                    <tr>
                        <th><i class="fa-solid fa-chalkboard"></i> Tên lớp</th>
                        <th><i class="fa-solid fa-book"></i> Tên môn học</th>
                        <th><i class="fa-solid fa-user-tie"></i> Giáo viên</th>
                        <th><i class="fa-solid fa-user-tie"></i> Trạng thái</th>
                        <th><i class="fa-solid fa-cogs"></i> Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cls in Model.StudentClasses)
                    {
                        <tr>
                            <td>@cls.ClassName</td>
                            <td>@cls.CourseName</td>
                            <td>@cls.TeacherName</td>
                            @if (cls.Status == "Đang diễn ra")
                            {
                                <td class="badge bg-success">Đang diễn ra</td>
                            }
                            else
                            {
                                <td class="badge bg-danger">Đã kết thúc</td>
                            }
                            <td class="text-center">
                                <a asp-page="/Student/Score" asp-route-classId="@cls.ClassId" class="btn btn-primary btn-sm">
                                    <i class="fa-solid fa-chart-line"></i> Điểm số
                                </a>
                                <a asp-page="/Student/Attendance" asp-route-classId="@cls.ClassId" class="btn btn-secondary btn-sm">
                                    <i class="fa-solid fa-calendar-check"></i> Điểm danh
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>