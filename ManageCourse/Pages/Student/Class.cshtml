@page
@model ManageCourse.Pages.Student.ClassModel
@{
    ViewData["Title"] = "Danh sách lớp học";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-primary mb-4">📚 Danh sách lớp học</h2>

        @if (Model.Classes == null || !Model.Classes.Any())
        {
            <div class="alert alert-warning text-center">Bạn chưa tham gia lớp học nào.</div>
        }
        else
        {
            <table class="table table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="p-3">Tên lớp</th>
                        <th class="p-3">Mã khóa học</th>
                        <th class="p-3">Tên khóa học</th>
                        <th class="p-3">Mã giáo viên</th>
                        <th class="p-3">Tên giáo viên</th>
                        <th class="p-3">Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Classes)
                    {
                        <tr>
                            <td class="p-3">@item.ClassName</td>
                            <td class="p-3">@item.CourseId</td>
                            <td class="p-3">@item.CourseName</td>
                            <td class="p-3">@item.TeacherId</td>
                            <td class="p-3">@item.TeacherName</td>
                            <td class="p-3">
                                @if (item.Status == "Đang diễn ra")
                                {
                                    <span class="badge bg-success">Đang diễn ra</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Đã kết thúc</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="text-center mt-3">
            <a asp-page="/Student/Dashboard" class="btn btn-outline-secondary">🏠 Quay lại</a>
        </div>
    </div>
</div>
