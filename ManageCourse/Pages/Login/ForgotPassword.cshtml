@page
@model ManageCourse.Pages.Login.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="width: 400px;">
        <h2 class="text-center text-danger">Forgot Password</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your full name" required />
            </div>

            <button type="submit" asp-page-handler="CheckUser" class="btn btn-primary w-100">Verify</button>
        </form>

        @if (Model.IsValidUser)
        {
            <hr />
            <form method="post">
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="PhoneNumber" />

                <div class="mb-3">
                    <label class="form-label fw-bold">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" required />
                </div>

                <button type="submit" asp-page-handler="ResetPassword" class="btn btn-success w-100">Reset Password</button>
            </form>
        }
    </div>
</div>
