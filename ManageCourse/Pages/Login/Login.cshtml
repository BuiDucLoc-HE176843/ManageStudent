@page
@model ManageCourse.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="width: 350px;">
        <h2 class="text-center text-primary">Login</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email" name="Email" class="form-control" placeholder="Enter your email" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Password</label>
                <input type="password" name="Password" class="form-control" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>

            <div class="text-center mt-3">
                <a asp-page="/Login/ForgotPassword" class="text-decoration-none">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>
