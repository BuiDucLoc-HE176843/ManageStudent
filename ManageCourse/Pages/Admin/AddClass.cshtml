@page
@model ManageCourse.Pages.Admin.AddClassModel
@{
    ViewData["Title"] = "Add Class";
}

<h2 class="text-center mb-4">
    <i class="fas fa-chalkboard-teacher"></i> Add New Class
</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.Message
    </div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
    </div>
}

<form method="post" class="p-4 shadow rounded bg-light">
    <div class="form-group mb-3">
        <label for="ClassName"><i class="fas fa-school"></i> Class Name</label>
        <input type="text" id="ClassName" name="ClassName" class="form-control" required placeholder="Enter class name" />
    </div>
    <div class="form-group mb-3">
        <label for="CourseId"><i class="fas fa-book"></i> Course</label>
        <select id="CourseId" name="CourseId" class="form-control" required>
            @foreach (var course in Model.Courses)
            {
                <option value="@course.CourseId">@course.CourseName</option>
            }
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="TeacherId"><i class="fas fa-user-tie"></i> Teacher</label>
        <select id="TeacherId" name="TeacherId" class="form-control" required>
            @foreach (var teacher in Model.Teachers)
            {
                <option value="@teacher.UserId">@teacher.FullName</option>
            }
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="TotalSessions"><i class="fas fa-calendar-alt"></i> Total Sessions</label>
        <input type="number" id="TotalSessions" value="20" class="form-control" readonly />
    </div>
    <div class="form-group mb-3">
        <label for="Status"><i class="fas fa-toggle-on"></i> Status</label>
        <select id="Status" name="Status" class="form-control" required>
            <option value="1">Active</option>
            <option value="2">Inactive</option>
        </select>
    </div>
    <div class="d-flex justify-content-between">
        <a href="/Admin/Dashboard" class="btn btn-secondary">
            <i class="fas fa-home"></i> Home
        </a>
        <button type="submit" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add Class
        </button>
    </div>
</form>

<style>
    h2 {
        color: #007bff;
    }

    .form-group label {
        font-weight: bold;
    }

    .btn-success, .btn-secondary {
        transition: 0.3s;
    }

        .btn-success:hover {
            background-color: #28a745;
            transform: scale(1.05);
        }

        .btn-secondary:hover {
            background-color: #6c757d;
            transform: scale(1.05);
        }

    .shadow {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
