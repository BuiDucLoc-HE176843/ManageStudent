@page
@model ManageCourse.Pages.Admin.UpdateOtherProfileModel
@{
    ViewData["Title"] = "UpdateOtherProfile";
}
<h2>Update Student Profile</h2>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="width: 450px;">
        <h2 class="text-center text-primary">👤 Chỉnh sửa hồ sơ sinh viên</h2>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success text-center">@Model.SuccessMessage</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">User ID</label>
                <input type="text" class="form-control" value="@Model.Other.UserId" readonly>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email" class="form-control" value="@Model.Other.Email" readonly>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Role</label>
                <input type="text" class="form-control" value="@Model.Other.Role" readonly>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Họ và tên</label>
                <input type="text" class="form-control" name="FullName" value="@Model.Other.FullName" required>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Quê quán</label>
                <input type="text" class="form-control" name="Hometown" value="@Model.Other.Hometown">
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Số điện thoại</label>
                <input type="text" class="form-control" name="PhoneNumber" value="@Model.Other.PhoneNumber">
            </div>

            <div class="d-flex justify-content-between">
                <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">🏠 Back to Home</a>
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>